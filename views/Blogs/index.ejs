<% layout('layout/boilerplate')%>
<style>
    #card{
        border-radius: 30px;
        border-color: hsl(171, 100%, 41%);
        border-width: 5px;
        max-width: 600px;
    }
    #cardheader{
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    }
    a{
        text-decoration-line: none;
        color:hsl(171, 100%, 41%);
        
    }
    a:hover{
        color:hsl(171, 100%, 41%);
    }
   /*  #title{
        background-color: hsl(171, 100%, 41%);
        color: white;
    } */
    @media(min-width:1017px){
        #image{
             min-width: 300px;
        }
    }
  
</style>
<!-- title: String,
author:String,
content:String,
image:String,
//comments:[{comment:String,author:String,date:Date}],-->
<%- include('../partials/flash')%>
<div class="row">
    
    <% for(let post of posts){ %> 
        <div class="col ">
            <div class="card p-0 m-4 shadow-lg" id="card">
                <a class="" href="/main/<%= post._id %> ">
                    
                    <h4 class="p-2 card-header" id="cardheader">Author</h4>
                    <img class="card-img-top d-block" id="image" src="https://images.unsplash.com/photo-1633114127451-558041183c3b?ixid=MnwxMjA3fDF8MHxlZGl0b3JpYWwtZmVlZHwxfHx8ZW58MHx8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"  alt="">
                    
                    
                        <h4 class="pt-1 m-2 d-flex card-title" id="title"><%= post.title %> </h4>
                        
                       
                    
                </a>
            </div>
           
        </div>
<% } %>  

</div>
